{
  "name": "fgo-slot-game",
  "version": "1.0.0",
  "description": "FGO风格的老虎机链游",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --kill-others --prefix-colors \"blue,green\" --prefix \"[{name}]\" --names \"SERVER,CLIENT\" \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install --legacy-peer-deps"
  },
  "keywords": ["game", "blockchain", "slot"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
